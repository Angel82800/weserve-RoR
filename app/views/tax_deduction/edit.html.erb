<div class="expanded margin-none dashboard-wrapper">
  <% if current_user %>
      <%= render 'layouts/sidebar_navigation' %>
  <% end %>

  <section class="s-wallet">
    <div class="s-wallet__wrapper">
      <h1 class="s-wallet__title"><%= t('commons.tax_deduction') %></h1>
      <%= form_tag @tax, url: tax_deduction_path(@tax.id), method: 'put' do %>
        <%= render partial: 'form'%>
      <% end %>
    </div>
  </section>
</div>